<h1><%= @post.title %></h1>
<%= link_to("Back", board_path(@board)) %>

<div class="post">
  <% if current_user && current_user == @post.user %>
    <%= link_to("Edit", edit_board_post_path(@board, @post)) %> |
    <%= link_to("Destroy", board_post_path(@board, @post), :method => :delete, :confirm => "Are you sure?") %> |
  <% end %>

  <% if current_user && current_user.is_admin? %>
    <%= link_to("A-Edit", edit_admin_board_post_path(@board, @post)) %> |
    <%= link_to("A-Destroy", admin_board_post_path(@board, @post), :method => :delete, :confirm => "Are you sure?") %> |
  <% end %>

  <%= simple_format(@post.content) %>
</div>
