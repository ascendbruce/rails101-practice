<h1>Board: <%= @board.name %></h1>
<p>
  <%= link_to "Back", admin_boards_path %> | 
  <%= link_to "Edit", edit_admin_board_path(@board) %> | 
  <%= link_to "Destroy", admin_board_path(@board), :method => :delete, :confirm => "Are you sure?" %>
</p>

<hr>
<h2>Posts</h2>

<% if @posts.present? %>
  <% @posts.each do |post| %>
    <h3><%= link_to post.title, admin_board_post_path(@board, post) %></h3>
    <p>
      <%= post.content %>
    </p>
    <%= link_to "Edit", edit_admin_board_post_path(@board, post) %> | 
    <%= link_to "Destroy", admin_board_post_path(@board, post), :method => :delete, :confirm => "Are you sure?" %>
    <hr>
  <% end %>
<% else %>
  <p>
    No post yet :(
  </p>
<% end %>

<p>
  <%= link_to "Add Post", new_admin_board_post_path(@board) %>
</p>
